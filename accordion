<script>
function toggleImage(e) {
    $(e.target)
        .prev('.panel-heading')
        .find('i.indicator')
        .toggleClass('accordion-toggle-close');
}
$('#accordion').on('hidden.bs.collapse', toggleImage);
$('#accordion').on('shown.bs.collapse', toggleImage);
</script>    
